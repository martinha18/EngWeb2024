extends layout

block content
    .w3-card-4
        header.w3-container.w3-black
            h1 Contratos
        
        .w3-container
            .w3-responsive
                table.w3-table-all
                    tr
                        th Id
                        th Objeto
                        th Data de celebração
                        th Preço contratual
                        th NIPC da entidade comunicante
                        th Entidade Comunicante
                    each c in lista 
                        tr 
                            td
                                a(href="/" + c.id) #{c.id}
                            td= c.objeto
                            td= c.celebracao
                            td= c.preco
                            td
                                a(href="/entidades/" + c.nipc) #{c.nipc}
                            td= c.entidade

        footer.w3-container.w3-black
            h5 Teste EW 2024