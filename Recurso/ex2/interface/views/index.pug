extends layout

block content
    .w3-card-4
        header.w3-container.w3-black
            h1 Livros
        
        .w3-container
            .w3-responsive
                table.w3-table-all
                    tr
                        th Id
                        th Titulo
                        th Autores
                        th Data de Publicação
                        th Páginas
                    each l in lista 
                        tr
                            td
                                a(href="/" + l._id) #{l._id}
                            td= l.title
                            td= l.author
                            td= l.publishDate
                            td= l.pages

        footer.w3-container.w3-black
            h5 Teste EW 2024