extends layout

block content
    .w3-card-4
        header.w3-container.w3-black
            h1 Compositores
            a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +
        
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Nome
                    th Actions
                each c in lista 
                    tr 
                        td= c.id
                        td
                            a(href="/compositores/" + c.id) #{c.nome}
                        td
                            a(href="/compositores/edit/" + c.id) [ Edit ]
                            a(href="/compositores/delete/" + c.id) [ Delete ]

        footer.w3-container.w3-black
            h5 Generated by EngWeb2024 in #{data} -
            a(href="/") [ Voltar ]