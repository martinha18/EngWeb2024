extends layout

block content
    .w3-card-4
        header.w3-container.w3-black
            h2 Formulário de Compositor
        form.w3-container(method="POST")
            fieldset
                legend Metadados
                label Id
                input.w3-input.w3-round(type="text",name="id")
                label Nome
                input.w3-input.w3-round(type="text",name="nome")
                label Biografia 
                input.w3-input.w3-round(type="text",name="bio")
                label Data de Nascimento 
                input.w3-input.w3-round(type="date",name="dataNasc")
                label Data de Óbito 
                input.w3-input.w3-round(type="date",name="dataObito")
                label Período 
                input.w3-input.w3-round(type="text",name="periodo")
            br
            button.w3-btn.w3-grey.w3-mb-2(type="submit") Register
        footer.w3-container.w3-black
            h5 Generated by EngWeb2024 in #{data} -
            a(href="/compositores") [ Voltar ]
    
    </div>